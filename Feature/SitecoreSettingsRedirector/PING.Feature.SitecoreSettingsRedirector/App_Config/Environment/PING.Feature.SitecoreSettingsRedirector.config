<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
	<sitecore>
		<pipelines>
			<initialize>
				<processor type="PING.Feature.SitecoreSettingsRedirector.Pipelines.Initialize.InitializeSolrSettingsRedirector, PING.Feature.SitecoreSettingsRedirector" resolve="true" patch:before="*[1]" />
			</initialize>
		</pipelines>

		<services>
			<register lifetime="Singleton" 
										serviceType="PING.Feature.SitecoreSettingsRedirector.Abstractions.ISitecoreStaticSettings, PING.Feature.SitecoreSettingsRedirector.Abstractions"
										implementationType="PING.Feature.SitecoreSettingsRedirector.Services.SitecoreSettingsAdapter, PING.Feature.SitecoreSettingsRedirector" />
		</services>
	</sitecore>
</configuration>